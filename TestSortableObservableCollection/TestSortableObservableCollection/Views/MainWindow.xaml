<Window x:Class="TestSortableObservableCollection.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestSortableObservableCollection.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="1024" Width="768" WindowState="Maximized">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top" x:Name="menu" HorizontalAlignment="Left"  VerticalAlignment="Top" >
                <MenuItem Header="Window">
                    <MenuItem Header="GDS Commands" Click="ShowGDSCommandsMenuItem_Click"/>
                    <MenuItem Header="Pnr Scripts" Click="ShowPnrScriptsMenuItem_Click"/>
                    <Separator/>
                    <MenuItem Header="Close" Click="CloseMenuItem_Click"/>
                </MenuItem>
            </Menu>
        </DockPanel>
    </Grid>
</Window>
